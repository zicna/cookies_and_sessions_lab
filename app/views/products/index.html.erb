<ul>
<% if session[:cart] %>
        <%= session[:cart].each do |product|%>
            <li><% product %></li>
        <% end %>
    <% end %>
</ul>

<%= form_tag ({
    controller: 'products',
    action: 'add',
    method: 'post'
    }) do %>
    
    <label>Product:</label>
    <%= text_field_tag :product %>
    <%= submit_tag "add to cart" %>
<% end %>